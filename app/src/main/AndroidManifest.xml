<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.patrickfeltes.graphingprogram">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".userinterface.auth.CreateAccountActivity" />
        <activity android:name=".userinterface.auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".userinterface.graphs.GraphingActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity android:name=".userinterface.graph_menu.GraphMenuActivity"></activity>
        <activity android:name=".userinterface.graph_menu.NewGraphActivity"></activity>
    </application>

</manifest>